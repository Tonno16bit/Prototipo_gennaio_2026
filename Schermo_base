#include <Wire.h>
#include <U8g2lib.h>

// Correct constructor (note the capital U8G2_)
U8G2_SSD1306_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, U8X8_PIN_NONE);

const int pot1Pin = 0;
const int pot2Pin = 1;

void setup() {
  Serial.begin(115200);

  // ESP32â€‘C3 custom I2C pins
  Wire.begin(4, 5);

  u8g2.begin();
}

void loop() {
  int pot1 = analogRead(pot1Pin)/10;
  int pot2 = analogRead(pot2Pin)/10;

  u8g2.clearBuffer();
  u8g2.setFont(u8g2_font_6x12_tf);

  u8g2.setCursor(0, 12);
  u8g2.print("Pot1: ");
  u8g2.print(pot1);

  u8g2.setCursor(0, 28);
  u8g2.print("Pot2: ");
  u8g2.print(pot2);

  u8g2.sendBuffer();

  delay(120);
}
